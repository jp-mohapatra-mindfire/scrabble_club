<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :start_date %><br>
      <%= f.date_select :start_date %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :end_date %><br>
      <%= f.date_select :end_date %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :place %><br>
      <%= f.text_field :place %>
    </div>
  </div>
  <%= f.fields_for :scores do |s| %>
    <div class="form-group">
      <div class="field">
        <%= s.label "player" %>
        <%= s.collection_select(:player_id, Player.all, :id, :name, { :prompt => 'Select Player'}) %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= s.label "score" %>
        <%= s.number_field :value %>
      </div>
    </div>
  <% end %>
  
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>
