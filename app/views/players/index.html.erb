<p id="notice"><%= notice %></p>

<h3>Listing Players</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Joining date</th>
      <th>Contact number</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.joining_date %></td>
        <td><%= player.contact_number %></td>
        <td><%= player.email %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

